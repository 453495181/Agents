@model AgentQuery

@*查询表单*@
<util-form layout="Inline" class="search__form">
    <util-row gutter="32">
        <util-column span="6">
            <util-textbox for="Code" show-label="true"></util-textbox>
        </util-column>
        <util-column span="6">
            <util-textbox for="Name" show-label="true"></util-textbox>
        </util-column>
        @*<util-column span="6">
            <util-textbox for="ParentCode" show-label="true"></util-textbox>
        </util-column>*@
        <util-column span="6" [class.text-right]="expand">
            <util-button id="btnQuery" text="查询" color="Primary" icon="Search" on-click="query(btnQuery)"></util-button>
            <util-button class="mx-sm" id="btnRefresh" text="刷新" icon="Sync" on-click="refresh(btnRefresh)"></util-button>
           
        </util-column>
    </util-row>
</util-form>