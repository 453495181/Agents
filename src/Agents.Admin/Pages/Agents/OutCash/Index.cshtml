@page
@model Agents.Service.Dtos.Agents.OutCashDto
<page-header title="提现"></page-header>
<util-card show-border="false">
    @*查询表单*@
    @await Html.PartialAsync( "Index.Query" )
    @*工具按钮*@
    <util-a class="mr-sm" color="Primary" icon="Plus" text="申请提现" link="create"></util-a>
    <util-button id="btnDelete" color="Danger" icon="Delete" text="删除" on-click="delete(btnDelete)"></util-button>
    @*提示语*@
    <util-alert class="my-md" type="Info" show-icon="true">
        已选择<strong class="text-primary mx-md">{{getCheckedLength()}}</strong>行
    </util-alert>
    @*表格*@
    <util-table id="tableOutCash" query-param="queryParam" base-url="outCash" sort="CreationTime desc">
        <util-table-column type="Checkbox"></util-table-column>
        <util-table-column type="LineNumber"></util-table-column>
        <util-table-column for="OutCashAgentName"></util-table-column>
        <util-table-column for="Money"></util-table-column>
        <util-table-column for="PayTypeName"></util-table-column>
        <util-table-column for="CardId"></util-table-column>
        <util-table-column for="StateName"></util-table-column>
        <util-table-column for="Note"></util-table-column>
        <util-table-column title="操作">
            <util-button class="mr-sm" color="Primary" shape="Circle" icon="Audit" tooltip="同意" on-click="audit(null,row.id)" ng-if="row.state==1 "></util-button>
            <util-button class="mr-sm" color="Danger" shape="Circle" icon="Diff" tooltip="拒绝" on-click="refuse(null,row.id)" ng-if="row.state==1 "></util-button>
            <util-button class="mr-sm" color="Danger" shape="Circle" icon="Delete" tooltip="取消" on-click="delete(null,row.id)"></util-button>
        </util-table-column>
    </util-table>
</util-card>